<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color1"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/normal_bg"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color1"></View>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/white"
            android:paddingLeft="24dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/user_auth"
                android:textColor="@color/text_color2" />

            <TextView
                android:id="@+id/tv_user_auth_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/icon_enter"
                android:gravity="left|center"
                android:textColor="@color/text_color1" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color1" />

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/white"
            android:paddingLeft="24dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/bind_bank_card"
                android:textColor="@color/text_color2" />

            <TextView
                android:id="@+id/tv_bind_bank_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/icon_enter"
                android:gravity="center"
                android:textColor="@color/text_color1" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/background_color1" />

        <TextView
            android:id="@+id/tv_modify_login_password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/icon_enter"
            android:gravity="left|center"
            android:paddingLeft="24dp"
            android:paddingRight="18dp"
            android:text="@string/modify_login_password"
            android:textColor="@color/text_color2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color1" />


        <TextView
            android:id="@+id/tv_reset_trade_password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/icon_enter"
            android:gravity="left|center"
            android:paddingLeft="24dp"
            android:paddingRight="18dp"
            android:text="@string/reset_trade_password"
            android:textColor="@color/text_color2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color1" />


        <TextView
            android:id="@+id/tv_modify_trade_password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/icon_enter"
            android:gravity="left|center"
            android:paddingLeft="24dp"
            android:paddingRight="18dp"
            android:text="@string/modify_trade_password"
            android:textColor="@color/text_color2" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/background_color1" />


        <TextView
            android:id="@+id/tv_modify_gesture_password"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/icon_enter"
            android:gravity="left|center"
            android:paddingLeft="24dp"
            android:paddingRight="18dp"
            android:text="@string/modify_gesture_password"
            android:textColor="@color/text_color2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color1"></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/background_color1"></View>
        <RelativeLayout
            android:id="@+id/notice_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_notification_setting"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:paddingLeft="24dp"
            android:paddingRight="18dp"
            android:text="@string/notification_setting"
            android:textColor="@color/text_color2"
            android:layout_alignParentEnd="true" />
            <com.bwash.bwashcar.view.UISwitchButton
                android:id="@+id/toggleButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_right"
                android:background="@color/transparent"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
            <ImageView
                android:id="@+id/img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_enter"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_color1"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_radius"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/quit_app"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>


